<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorMango</item>
        <item name="colorPrimaryDark">@color/colorDarkMango</item>
        <item name="android:textColorPrimary">@color/colorBlack87</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowBackground">@color/colorGreyWhite</item>
        <item name="android:colorBackground">@color/colorGreyWhite</item>
        <item name="colorControlNormal">@color/colorWhite</item>

        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>


    <style name="HeaderTextStyle">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/colorBlack87</item>
        <item name="android:textStyle">bold</item>
        <item name="android:lineSpacingExtra">8sp</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:layout_marginStart">16dp</item>
        <item name="android:layout_marginTop">16dp</item>
    </style>
    
    <style name="DescriptionTextStyle">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/colorWarmGrey3</item>
        <item name="android:textStyle">normal</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:lineSpacingExtra">6sp</item>
    </style>
    
    <style name="ToolbarTextStyle" parent="AppTheme">
        <item name="android:textColorPrimary">@color/colorWhite</item>
    </style>

    <style name="AddNoteTheme" parent="AppTheme">
        <item name="android:windowBackground">@color/colorWhite</item>
        <item name="android:colorBackground">@color/colorWhite</item>
    </style>
    
    <style name="AddNoteHeaderTextStyle">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/colorWarmGrey4</item>
        <item name="android:textStyle">bold</item>
        <item name="android:lineSpacingExtra">8sp</item>
        <item name="android:fontFamily">sans-serif</item>
    </style>
    
    <style name="AddNoteDescriptionTextStyle" parent="AddNoteHeaderTextStyle">
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">normal</item>
    </style>

</resources>
