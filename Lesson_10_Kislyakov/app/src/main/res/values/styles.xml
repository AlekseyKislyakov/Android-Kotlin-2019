<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorWeirdGreen</item>
        <item name="colorPrimaryDark">@color/colorDarkWeirdGreen</item>
        <item name="android:textColorPrimary">@color/colorWhite</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowBackground">@color/colorWhite</item>
        <item name="android:colorBackground">@color/colorWhite</item>
        <item name="colorControlNormal">@color/colorBlack</item>
        
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
    
    <style name="HeaderTextStyle">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/colorCustomBlack</item>
        <item name="android:textStyle">normal</item>
        <item name="android:lineSpacingExtra">8sp</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:layout_marginStart">16dp</item>
        <item name="android:layout_marginTop">16dp</item>
    </style>
    
    <style name="DivorceTextStyle">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/colorBrownishGrey</item>
        <item name="android:textStyle">normal</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:lineSpacingExtra">6sp</item>
        <item name="android:layout_marginStart">16dp</item>
        <item name="android:layout_marginBottom">16dp</item>
    </style>
    
    <style name="DescriptionTextStyle">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/colorBrownishGrey</item>
        <item name="android:textStyle">normal</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:lineSpacingExtra">6sp</item>
    </style>

</resources>
