<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowBackground">@color/white</item>
        <item name="android:colorBackground">@color/white</item>

        <item name="colorControlNormal">@color/colorBlack</item>
        <item name="android:textColorPrimary">@color/colorDescriptionText</item>

        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <!-- Description text style -->
    <style name="DescriptionTextStyle">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/greyish_brown</item>
        <item name="android:textStyle">normal</item>
        <item name="android:lineSpacingExtra">8sp</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:layout_marginStart">16dp</item>
        <item name="android:layout_marginBottom">16dp</item>
        <item name="android:layout_marginEnd">16dp</item>
    </style>

    <!-- Header text style -->
    <style name="HeaderTextStyle">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/warm_grey</item>
        <item name="android:textStyle">normal</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:layout_margin">16dp</item>
    </style>

    <color name="greyish_brown">#414141</color>
    <color name="warm_grey">#979797</color>
</resources>
